// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Coach {
  id      Int      @id @default(autoincrement())
  name    String
  contact String
  rosters Roster[]
  players Player[]
}

model Player {
  id       Int      @id @default(autoincrement())
  name     String
  position Position
  contact  String
  rosters   Roster[]
  Coach    Coach?   @relation(fields: [coachId], references: [id])
  coachId  Int?
}

model Roster {
  id         Int        @id @default(autoincrement())
  event_type Event_Type
  date       DateTime
  time       DateTime
  location   String
  details    String
  players    Player[]
  Coach      Coach?     @relation(fields: [coachId], references: [id])
  coachId    Int?
}

enum Position {
  GOAL_KEEPER
  FULL_BACK_RIGHT
  FULL_BACK_LEFT
  CENTRE_BACK
  SWEEPER
  DEFENSIVE_MIDFIELD_RIGHT
  DEFENSIVE_MIDFIELD_LEFT
  SECOND_STRIKER
  CENTRE_FORWARD
}

enum Event_Type {
  PRACTICE
  MATCH
  OTHER
}
